@model apiwars.ViewModels.PlanetVotesViewModel

<div class="modal fade" id="voting-statistics-modal" tabindex="-1" role="dialog" aria-labelledby="modal-label"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content p-5">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-label">Planet voting statistics</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered table-responsive planets-voting-table">
                    <thead>
                    <tr>
                        <th scope="col">Planet name</th>
                        <th scope="col">Vote count</th>
                    </tr>
                    </thead>
                    <tbody class="planet-table-body">
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>